{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="flex justify-center items-center min-h-screen bg-gray-100">

        <div class="bg-white p-8 rounded-lg shadow-lg">
            <h1 class="text-3xl font-semibold text-center text-gray-800 mb-6">Please sign in</h1>

            <!-- Affichage des erreurs -->
            {% if error %}
                <div class="bg-red-500 text-white p-4 rounded-lg mb-6">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            {% if app.user %}
                <div class="mb-4 text-center text-gray-600">
                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}" class="text-blue-500 hover:text-blue-700">Logout</a>
                </div>
            {% endif %}

            <!-- Formulaire de connexion -->
            <form method="post">

                <!-- Email -->
                <div class="mb-4">
                    <label for="username" class="block text-gray-700 font-semibold mb-2">Email</label>
                    <input type="email" name="_username" id="username" value="{{ last_username }}"
                           class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                           autocomplete="email" required autofocus>
                </div>

                <!-- Password -->
                <div class="mb-6">
                    <label for="password" class="block text-gray-700 font-semibold mb-2">Password</label>
                    <input type="password" name="_password" id="password"
                           class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                           autocomplete="current-password" required>
                </div>

                <!-- CSRF token -->
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <!-- Remember me (optionnel) -->
                {# Uncomment the following to enable "Remember me" functionality
                <div class="flex items-center mb-4">
                    <input type="checkbox" name="_remember_me" id="_remember_me" class="mr-2">
                    <label for="_remember_me" class="text-gray-600">Remember me</label>
                </div>
                #}

                <!-- Submit button -->
                <div class="flex justify-center">
                    <button type="submit" class="w-full py-2 px-4 bg-blue-500 text-white font-semibold rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500">
                        Sign in
                    </button>
                </div>
            </form>
        </div>

    </div>
{% endblock %}
